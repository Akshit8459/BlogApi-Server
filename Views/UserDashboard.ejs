<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0d0d0d;
            color: #f0f0f0;
        }

        /* Topbar */
        .topbar {
            background-color: #1a1a1a;
            color: #ffa500;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 25px;
            box-shadow: 0 2px 10px rgba(255, 165, 0, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .topbar h1 {
            margin: 0 auto;
            font-size: 1.8rem;
            background: linear-gradient(90deg, #ff6a00, #ffa500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .menu-icon {
            font-size: 1.5rem;
            cursor: pointer;
            color: #ffa500;
        }

        /* Sidebar */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 999;
            top: 0;
            right: 0;
            background-color: #1a1a1a;
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 60px;
            box-shadow: -2px 0 15px rgba(255, 165, 0, 0.2);
        }

        .sidebar a {
            padding: 16px 32px;
            text-decoration: none;
            font-size: 1rem;
            color: #ffa500;
            display: block;
            transition: 0.2s;
        }

        .sidebar a:hover {
            background-color: #262626;
            color: #ffffff;
        }

        /* Content wrapper */
        .main {
            padding: 110px 30px 40px 30px; /* top padding adjusted for fixed topbar */
        }

        .closebtn {
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 25px;
            color: #ffa500;
            cursor: pointer;
        }

        /* Blog card styles */
        .blog-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .blog-card {
            background-color: #1e1e1e;
            padding: 20px;
            border-left: 5px solid #ffa500;
            border-radius: 8px;
        }

        .blog-title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #ffa500;
        }

        .blog-meta {
            font-size: 0.9rem;
            color: #bbb;
            margin: 5px 0;
        }

        .blog-content {
            margin-top: 10px;
            color: #ddd;
        }

        @media (max-width: 768px) {
            .topbar h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>

    <!-- Topbar -->
    <div class="topbar">
        <span class="menu-icon" onclick="openSidebar()">☰</span>
        <h1>Blog App</h1>
    </div>

    <!-- Sidebar -->
    <div id="mySidebar" class="sidebar">
        <span class="closebtn" onclick="closeSidebar()">×</span>
        <a href="/blogs/create">Create Blog</a>
        <a href="/blogs/myblogs">View My Blogs</a>
        <a href="/users/logout">Logout</a>
    </div>

    <!-- Main blog content -->
    <div class="main">
        <% if (typeof message !== 'undefined' && message) { %>
            <p><%= message %></p>
        <% } else if (typeof items !== 'undefined' && items) { %>
            <div class="blog-list">
                <%- items %>
            </div>
        <% } else { %>
            <p>No blog data provided.</p>
        <% } %>
    </div>

    <!-- Sidebar toggle script -->
    <script>
        function openSidebar() {
            document.getElementById("mySidebar").style.width = "250px";
        }

        function closeSidebar() {
            document.getElementById("mySidebar").style.width = "0";
        }
    </script>
</body>
</html>
