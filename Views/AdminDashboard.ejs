<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard | My Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0d0d0d;
            color: #f0f0f0;
        }

        /* Topbar */
        .topbar {
            background-color: #1a1a1a;
            color: #ffa500;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px 25px;
            box-shadow: 0 2px 10px rgba(255, 165, 0, 0.1);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .topbar h1 {
            margin: 0;
            font-size: 1.8rem;
            background: linear-gradient(90deg, #ff6a00, #ffa500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .logout-btn {
            position: absolute;
            right: 25px;
            top: 50%;
            transform: translateY(-50%);
            background: linear-gradient(145deg, #ff6a00, #ff9900);
            color: #0d0d0d;
            font-weight: bold;
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.3s ease;
            white-space: nowrap;
        }

        .logout-btn:hover {
            background: #ffa500;
        }

        /* Main content */
        .main {
            padding: 110px 30px 40px 30px;
        }

        .user-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .user-card {
            background-color: #1e1e1e;
            padding: 20px;
            border-left: 5px solid #ffa500;
            border-radius: 10px;
            position: relative;
            box-shadow: 0 0 10px rgba(255, 165, 0, 0.05);
        }

        .user-actions {
            position: absolute;
            top: 15px;
            right: 15px;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 10px;
        }

        .delete-btn,
        .view-btn {
            padding: 8px 14px;
            border-radius: 6px;
            font-weight: bold;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .delete-btn {
            background-color: #ff4d4d;
            color: #fff;
        }

        .delete-btn:hover {
            background-color: #e60000;
        }

        .view-btn {
            background: linear-gradient(145deg, #ffa500, #ffb733);
            color: #0d0d0d;
            display: inline-block;
        }

        .view-btn:hover {
            background: #ffa500;
        }

        .user-details-wrapper {
            margin-top: 0;
        }

        .user-detail {
            margin-bottom: 10px;
        }

        .user-detail strong {
            color: #ffa500;
        }

        .user-card ul {
            margin-top: 10px;
            padding-left: 18px;
            color: #ddd;
        }

        @media (max-width: 768px) {
            .topbar h1 {
                font-size: 1.5rem;
            }

            .logout-btn {
                font-size: 0.85rem;
                padding: 8px 14px;
                right: 15px;
            }

            .main {
                padding: 100px 15px;
            }
        }
    </style>
</head>
<body>

    <!-- Topbar -->
    <div class="topbar">
        <h1>My Blog</h1>
        <a class="logout-btn" href="/users/logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main">
        <div class="user-list">
            <%- items %>
        </div>
    </div>

</body>
</html>
